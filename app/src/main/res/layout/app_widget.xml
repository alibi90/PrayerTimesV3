<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/appwidget_fajr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fajr: --:--" />

    <TextView
        android:id="@+id/appwidget_sunrise_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_fajr_time"
        android:text="Sunrise: --:--" />

    <TextView
        android:id="@+id/appwidget_dhuhr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_sunrise_time"
        android:text="Dhuhr: --:--" />

    <TextView
        android:id="@+id/appwidget_asr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_dhuhr_time"
        android:text="Asr: --:--" />

    <TextView
        android:id="@+id/appwidget_maghrib_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_asr_time"
        android:text="Maghrib: --:--" />

    <TextView
        android:id="@+id/appwidget_isha_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_maghrib_time"
        android:text="Isha: --:--" />

    <Button
        android:id="@+id/appwidget_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appwidget_isha_time"
        android:text="Refresh" />
</RelativeLayout>
