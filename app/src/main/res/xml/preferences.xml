<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:key="calc_method"
        android:title="Calculation Method"
        android:entries="@array/calc_methods"
        android:entryValues="@array/calc_method_values"
        android:defaultValue="MWL" />

    <SwitchPreferenceCompat
        android:key="enable_notifications"
        android:title="Enable Notifications"
        android:defaultValue="true" />

    <SwitchPreferenceCompat
        android:key="enable_aod"
        android:title="Enable Always-On Display"
        android:defaultValue="false" />
</PreferenceScreen>